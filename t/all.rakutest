    is(
        do {
            my $t = Track.new;
            $t.dt: 100;
            $t.copyright: 'c 2022 anonymous';
            $t.name: 'melody';
            $t.instrument: 'piano';
            $t.render;
            $t.dt;
        },
        100,
        'Track: dt remains intact after render'
    );
}

